<script>
  window.onscroll = function () {
      scrollRotate();
  };

  function scrollRotate() {
      let rubies = document.querySelectorAll(".spinning-ruby");

      rubies.forEach((ruby) => {
          ruby.style.transform = "rotate(" + window.pageYOffset / 2 + "deg)";
      });
  }
</script>
